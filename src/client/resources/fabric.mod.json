{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": ["${mod_author}"],
  "contact": {
    "homepage": "https://alfakynz.github.io/WildLight",
    "sources": "${mod_url}",
    "issues": "${mod_url}/issues"
  },
  "license": "${mod_license}",
  "icon": "assets/wildlight/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "com.alfakynz.wildlight.WildLightClient",
      "com.alfakynz.wildlight.compat.DetailabCompat"
    ]
  },
  "mixins": [
    "wildlight.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "${minecraft_version}",
    "java": ">=21",
    "fabric-api": "*"
  },
  "suggests": {
    "deeperdarker": "*",
    "friendsandfoes": "*",
    "detailab-compat": "*",
    "detail-armor-bar": "*"
  }
}
